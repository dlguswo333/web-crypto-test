{
    "ts-node": {
        "compilerOptions": {
            "module": "commonjs"
        }
    },
    "include": [
        "src/**/*.ts"
    ],
    "compilerOptions": {
        "strictNullChecks": true,
        "module": "ES2020",
        "outDir": "build",
        "target": "ES2020",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "sourceMap": true,
    },
}
